<div class="jumbotron jumbotron-fluid">
  <div class="container">
    
    <h1 class="display-4 text-center">
      <i class="fas fa-utensils"></i> </br>
      Recipe Book</h1>
  </div>
</div>


<div class="container">

  <div class="row">

    <div class="col-sm">
      <h2>Your Recipes</h2>
      <ul>
        {{#each recipes}}
            <li>
                <a href="/recipe/{{id}}">{{recipe_name}}</a>
            </li>
        {{/each}}
      </ul>

    </div>

  </div>
</div>


<div class="container text-center">
  <div class="row">
    <div class="col-sm">

        <h2>Add a Recipe</h2>
        <form class="create-form">

          <div class="form-group">
            <p>Enter your recipe information and click the "Submit" button.</p>
            <label for="ca">Name:</label> 
            <input type="text" id="ca" name="name"> </br>
            <label for="ca">Photo:</label>
            <input type="text" id="ca" name="name"> </br>
            <label for="ca" id="ingredients">Ingredients:</label>
            <label for="ca">Directions:</label>
            <input type="text" id="ca" name="name">
          </div>

          <button type="submit">Submit</button>
        </form>
      
    </div>
  </div>
</div>








