              <h4>{{season}}</h4>
              <h4>{{amount}}</h4>
            {{/each}}
            </p>

          <p>
            <strong>Directions</strong>: {{recipe.directions}}</p>

            <a href="/">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
