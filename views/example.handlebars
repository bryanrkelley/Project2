<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">{{recipe.recipe_name}}</h5>

          <img src="/uploads/{{recipe.recipeImage}}"/>
          <p>
            {{!-- replace this ingredients variable with a handlebars loop that will display all of the correct information  --}}
            <strong>Ingredients</strong>:
            {{#each ingredients}}
              <h3>{{amount}} - {{name}}</h3>
              <h4></h4>
            {{/each}}
            </p>


            <p>
            {{!-- replace this ingredients variable with a handlebars loop that will display all of the correct information  --}} 
            <strong>Recipes</strong>: 
            {{#each recipes}}
              <h3>{{recipe_name}}</h3>
            {{/each}}
            </p>

          <p>
            <strong>Directions</strong>: {{recipe.directions}}</p>

            <a href="/">‚Üê Back To Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
